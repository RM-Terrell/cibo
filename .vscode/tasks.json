{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Go Tests (/internal)",
            "type": "shell",
            "command": "go test ./...",
            "options": {
                "cwd": "${workspaceFolder}/internal"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false,
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Start Mock AlphaVantage API",
            "type": "shell",
            "command": "go run ./tools/mock_alpha_vantage_api/main.go",
            "isBackground": true,
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new",
            }
        }
    ]
}